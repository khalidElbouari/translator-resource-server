PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# CORS (comma separated origins or * for all)
CORS_ORIGINS=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/translator
MONGODB_DB=translator
REDIS_URL=redis://localhost:6379

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Google OAuth
GOOGLE_CLIENT_ID=clientID

# Paddle (webhooks)
PADDLE_WEBHOOK_SECRET=your_paddle_signature_secret

# Hugging Face
HF_API_KEY=your_hugging_face_key
HF_TEXT_MODEL=Qwen/Qwen2.5-7B-Instruct
HF_VISION_MODEL=Qwen/Qwen2.5-VL-7B-Instruct

# Google (Gemini)
GOOGLE_API_KEY=your_google_api_key
GOOGLE_TEXT_MODEL=gemini-2.0-flash-lite